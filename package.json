{
  "name": "orangejelly-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run check:growth-language && npm run check:british-english && next build",
    "start": "next start",
    "lint": "next lint && npm run check:growth-language && npm run check:british-english",
    "check:growth-language": "node scripts/check-growth-language.mjs",
    "check:british-english": "node scripts/check-british-english.mjs",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build:search": "tsx -e \"import { buildSearchIndex } from './src/lib/search'; buildSearchIndex();\"",
    "build:feeds": "tsx -e \"import { saveFeeds } from './src/lib/feeds'; saveFeeds();\"",
    "build:all": "npm run build:search && npm run build:feeds",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "node scripts/check-growth-language.mjs",
      "node scripts/check-british-english.mjs"
    ],
    "*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-toast": "^1.2.14",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.536.0",
    "next": "^14.2.32",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "schema-dts": "^1.1.5",
    "tailwind-merge": "^3.3.1",
    "unified": "^11.0.5",
    "web-vitals": "^3.5.2",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.31",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "marked": "^16.1.2",
    "playwright": "^1.54.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4"
  }
}
